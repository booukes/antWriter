<Window x:Class="antWriter.EditorWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:antWriter"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      WindowState="Maximized"
      WindowStartupLocation="CenterScreen"
      Height="450" Width="800"
      Title="EditorWindow">
    <!-- TO REFACTOR ALL CODE -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="12*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Navbar -->
        <Border BorderBrush="Black" BorderThickness="0,0,0,3" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Background="#432818" />
        <Image Source="/antWriterFinal.png" Grid.Column="1" HorizontalAlignment="Right">
            <Image.LayoutTransform>
                <ScaleTransform ScaleX="0.8" ScaleY="0.8" />
            </Image.LayoutTransform>
        </Image>

        <!-- File view -->
        <Border BorderBrush="Black" BorderThickness="0,0,3,0" Grid.Row="1" Grid.Column="0" Background="#636b2f" />

        <!-- Editor -->
        <Border BorderBrush="Black" Grid.Row="1" Grid.Column="1" Background="#636b2f" />
        <TextBox BorderThickness="0">  
            <Grid.Row>1</Grid.Row>  
            <Grid.Column>1</Grid.Column>  
            <TextBox.Background>Transparent</TextBox.Background>  
            <TextBox.AcceptsReturn>True</TextBox.AcceptsReturn>  
            <TextBox.TextWrapping>Wrap</TextBox.TextWrapping>  
            <TextBox.VerticalScrollBarVisibility>Auto</TextBox.VerticalScrollBarVisibility>  
        </TextBox>
    </Grid>
</Window>
