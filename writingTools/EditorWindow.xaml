<Window x:Class="antWriter.EditorWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:antWriter"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      WindowState="Maximized"
      WindowStartupLocation="CenterScreen"
      Height="450" Width="800"
      Title="EditorWindow">
    <!-- TO REFACTOR ALL CODE -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="12*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Navbar -->

        <Border BorderBrush="Black" BorderThickness="0,0,0,3" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Background="{DynamicResource AppCompliementaryBrush}" />
        <Grid Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Image Source="/antWriterFinal.png" Grid.Column="8" HorizontalAlignment="Right"/>
            <Button Name="Exit" Click="Exit_Click" Grid.Row="0" Grid.Column="0" Background="Transparent" Margin="0 5 0 5" BorderBrush="Black" BorderThickness="0 0 1 0">
                <Viewbox Stretch="Uniform" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <TextBlock Text="Main menu" Margin="2"
                        FontFamily="./fonts/Montserrat-Light.ttf#Montserrat Light"
                        HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Viewbox>
            </Button>
            <Button Name="Save" Click="Save_Click" Grid.Row="0" Grid.Column="1" Background="Transparent" Margin="0 5 0 5" BorderBrush="Black" BorderThickness="0 0 1 0">
                <Viewbox Stretch="Uniform" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <TextBlock Text="Save" Margin="2"
                        FontFamily="./fonts/Montserrat-Light.ttf#Montserrat Light"
                        HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Viewbox>
            </Button>
            <Button Name="Load" Click="Load_Click" Grid.Row="0" Grid.Column="3" Background="Transparent" Margin="0 5 0 5" BorderBrush="Black" BorderThickness="0 0 1 0">
                <Viewbox Stretch="Uniform" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <TextBlock Text="Load" Margin="2"
                        FontFamily="./fonts/Montserrat-Light.ttf#Montserrat Light"
                        HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Viewbox>
            </Button>
            <Button Name="SaveAs" Click="SaveAs_Click" Grid.Row="0" Grid.Column="2" Background="Transparent" Margin="0 5 0 5" BorderBrush="Black" BorderThickness="0 0 1 0">
                <Viewbox Stretch="Uniform" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <TextBlock Text="Save As" Margin="2"
                        FontFamily="./fonts/Montserrat-Light.ttf#Montserrat Light"
                        HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Viewbox>
            </Button>
            <Button Name="New" Click="CreateNewFile_Click" Grid.Row="0" Grid.Column="4" Background="Transparent" Margin="0 5 0 5" BorderBrush="Black" BorderThickness="0 0 1 0">
                <Viewbox Stretch="Uniform" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <TextBlock Text="New File" Margin="2"
            FontFamily="./fonts/Montserrat-Light.ttf#Montserrat Light"
            HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Viewbox>
            </Button>
        </Grid>
        <!-- File view -->
        <Border x:Name="BorderFiles" BorderBrush="Black" BorderThickness="0,0,3,0" Grid.Row="1" Grid.Column="0" Background="{DynamicResource AppBackgroundBrush}" />
        <StackPanel x:Name="RecentFiles" Grid.Row="1" Grid.Column="0"/>
        <!-- Editor -->
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="25*"/>
            </Grid.RowDefinitions>
            <Border BorderBrush="Black" Grid.Row="0" Grid.Column="1" Background="{DynamicResource AppCompliementaryBrush}" />
            <Viewbox x:Name="fileNameHeader" Stretch="Uniform" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Stretch">
            </Viewbox>
            <Border BorderBrush="Black" Grid.Row="1" Grid.Column="1" Background="{DynamicResource AppBackgroundBrush}" />
            <TextBox x:Name="EditingBoard" BorderThickness="0" FontFamily="{DynamicResource JournalFont}">
                <Grid.Row>1</Grid.Row>
                <Grid.Column>1</Grid.Column>
                <TextBox.Background>Transparent</TextBox.Background>
                <TextBox.TextWrapping>Wrap</TextBox.TextWrapping>
                <TextBox.AcceptsReturn>True</TextBox.AcceptsReturn>
                <TextBox.VerticalScrollBarVisibility>Auto</TextBox.VerticalScrollBarVisibility>
            </TextBox>
        </Grid>
    </Grid>
</Window>
