<UserControl x:Class="antWriter.RespButton"
             x:Name="root"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:antWriter"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border CornerRadius="{Binding BtnRad, ElementName=root}" Background="{Binding BtnBg, ElementName=root}">
        <Button BorderThickness="0" Background="Transparent">
            <Viewbox Stretch="Uniform" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <local:RespText TextProp="{Binding BtnText, ElementName=root}"></local:RespText>
            </Viewbox>
        </Button>
    </Border>
</UserControl>
