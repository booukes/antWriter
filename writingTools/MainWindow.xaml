<Page x:Class="antWriter.MainWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:antWriter"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainWindow">
<!-- TO REFACTOR ALL CODE -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="12*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Navbar -->
        <Border BorderBrush="Black" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Background="#432818" />
        <Image Source="/antWriterFinal.png" Grid.Column="1" HorizontalAlignment="Right">
            <Image.LayoutTransform>
                <ScaleTransform ScaleX="0.8" ScaleY="0.8" />
            </Image.LayoutTransform>
        </Image>

        <!-- File view -->
        <Border BorderBrush="Black" Grid.Row="1" Grid.Column="0" Background="#6f1d1b" />

        <!-- Editor -->
        <Border BorderBrush="Black" Grid.Row="1" Grid.Column="1" Background="#bb9457" />
        <TextBox>
            <Grid.Row>1</Grid.Row>
            <Grid.Column>1</Grid.Column>
            <TextBox.Background>Transparent</TextBox.Background>
            <TextBox.AcceptsReturn>True</TextBox.AcceptsReturn>
            <TextBox.TextWrapping>Wrap</TextBox.TextWrapping>
            <TextBox.VerticalScrollBarVisibility>Auto</TextBox.VerticalScrollBarVisibility>
        </TextBox>
    </Grid>
</Page>
