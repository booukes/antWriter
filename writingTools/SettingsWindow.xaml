<Window Background="{DynamicResource AppBackgroundBrush}" x:Class="antWriter.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:antWriter"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Title="MenuWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.6*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <!-- Header -->
        <Viewbox Stretch="Uniform" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5 0 0 0">
            <TextBlock Text="Settings" 
                FontFamily="./fonts/Montserrat-Light.ttf#Montserrat Light"
                HorizontalAlignment="Center" VerticalAlignment="Center" Width="119"/>
        </Viewbox>
        <Image Grid.Column="2" Grid.Row="0" Margin="5 0 5 0" HorizontalAlignment="Right" Source="/antWriterFinal.png" />
        <!-- Main Settings Page -->
        <Button Name="color" Click="ButtonSettings" Grid.Row="1" Grid.Column="0" Background="#BAC095" Margin="50 15 50 15">
            <TextBlock Text="Test Settings"
                FontFamily="./fonts/Montserrat-Light.ttf#Montserrat Light"
                HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Button>
        <Grid Grid.Row="3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
            <Viewbox HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="0">
                <TextBlock Margin="8" FontFamily="./fonts/Montserrat-Light.ttf#Montserrat Light">Font size</TextBlock>
            </Viewbox>
            <TextBox Grid.Column="1" Margin="10" Name="fontsize">

            </TextBox>
            <Button Content="Submit" Grid.Column="2" Margin="10" Click="SaveFont_Click"/>
        </Grid>
    <ComboBox x:Name="FontBox" SelectionChanged="ChangeFont" Grid.Row="2" Margin="50 15 50 15">
        </ComboBox>
        <!-- Footer -->
        <Button Background="#BAC095" Margin="30 10 30 10" HorizontalAlignment="Right" Click="Exit_Click" MaxHeight="50" MaxWidth="400" Grid.Column="2" Grid.Row="7">
            <Viewbox Stretch="Uniform" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <TextBlock Text="Save &amp; Exit"
                    FontFamily="./fonts/Montserrat-Light.ttf#Montserrat Light"
                    HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Viewbox>
        </Button>
    </Grid>
</Window>