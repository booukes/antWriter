<mah:MetroWindow Background="{DynamicResource AppBackgroundBrush}" x:Class="antWriter.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:local="clr-namespace:antWriter" 
        xmlns:iconPacks="clr-namespace:MahApps.Metro.IconPacks;assembly=MahApps.Metro.IconPacks.Modern"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowTransitionsEnabled="False"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        Title="MenuWindow" Height="450" Width="800">

    <mah:MetroWindow.LeftWindowCommands>
        <mah:WindowCommands>
            <Button Click="Github_Click" ToolTip="Open up the GitHub site">
                <iconPacks:PackIconModern Width="22"
                                  Height="22"
                                  Kind="SocialGithubOctocat" />
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.LeftWindowCommands>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.6*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <!-- Header -->
        <Viewbox Stretch="Uniform" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5 0 0 0">
            <TextBlock Text="Settings" 
                FontFamily="./fonts/Montserrat-Light.ttf#Montserrat Light"
                HorizontalAlignment="Center" VerticalAlignment="Center" Width="119"/>
        </Viewbox>
        <Image Grid.Column="2" Grid.Row="0" Margin="5 0 5 0" HorizontalAlignment="Right" Source="/antWriterFinal.png" />
        <!-- Main Settings Page -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Viewbox HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="0">
                <TextBlock Margin="8" FontFamily="./fonts/Montserrat-Light.ttf#Montserrat Light">Font size</TextBlock>
            </Viewbox>
            <mah:NumericUpDown Width="100" Height="30" SwitchUpDownButtons="True" HorizontalAlignment="Left" Minimum="6" Maximum="60" x:Name="fontSizeSelect" ValueChanged="FontSize_Click" HideUpDownButtons="False" Background="AliceBlue" Grid.Column="1" NumericInputMode="Numbers"></mah:NumericUpDown>
        </Grid>
        <Grid Grid.Column="0" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Viewbox Stretch="Uniform" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <TextBlock Margin="8" Text="Font Family"
                     FontFamily="./fonts/Montserrat-Light.ttf#Montserrat Light"
                     HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Viewbox>
            <ComboBox HorizontalAlignment="Left" Grid.Column="1" x:Name="FontBox" SelectionChanged="FontFamily_Click" Grid.Row="1" Width="100" Height="30"/>
        </Grid>
        <!-- Footer -->
        <Button Background="#BAC095" Margin="30 10 30 10" HorizontalAlignment="Right" Click="Exit_Click" MaxHeight="50" MaxWidth="400" Grid.Column="2" Grid.Row="7">
            <Viewbox Stretch="Uniform" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <TextBlock Text="Save &amp; Exit"
                    FontFamily="./fonts/Montserrat-Light.ttf#Montserrat Light"
                    HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Viewbox>
        </Button>
    </Grid>
</mah:MetroWindow>